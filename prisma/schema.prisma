generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id       String    @id @default(cuid())
    name     String    @unique
    email    String    @unique
    password String
    keywords Keyword[]
}

model Keyword {
    id     Int    @id @default(autoincrement())
    text   String
    userId String
    user   User   @relation(fields: [userId], references: [id])

    @@unique([text, userId])
}
